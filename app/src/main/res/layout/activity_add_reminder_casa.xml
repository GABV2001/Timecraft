<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReminderCasaActivity">

    <EditText
        android:id="@+id/remindeCasatitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Titulo de Reminder"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/reminderCasaDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@id/remindeCasatitle"
        app:layout_constraintStart_toStartOf="@id/remindeCasatitle"
        app:layout_constraintTop_toTopOf="@id/remindeCasatitle" />

    <EditText
        android:id="@+id/reminderDateview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="date"
        app:layout_constraintEnd_toStartOf="@+id/reminderCasatimeview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminderCasaDescripcion"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:id="@+id/showreminderdatepickerCasa_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/reminderDateview"
        app:layout_constraintEnd_toEndOf="@+id/reminderDateview"
        app:layout_constraintTop_toTopOf="@+id/reminderDateview"
        android:src="@drawable/ic_baseline_date_range_24"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/reminderCasatimeview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Tiempo"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/reminderDateview"
        app:layout_constraintTop_toBottomOf="@+id/reminderCasaDescripcion"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp" />

    <ImageButton
        android:id="@+id/showremindertimepickerReminderCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/reminderCasatimeview"
        app:layout_constraintEnd_toEndOf="@+id/reminderCasatimeview"
        app:layout_constraintTop_toTopOf="@+id/reminderCasatimeview"
        android:src="@drawable/ic_baseline_access_time_24"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/guardarReminderCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminderDateview" />

</androidx.constraintlayout.widget.ConstraintLayout>